@model IEnumerable<iglid.Models.ApplicationUser>

@{
    ViewData["Title"] = "View";
}

<h2>Leaderboard</h2>

<div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    PSN
                </th>
                <th>
                    Score
                </th>
                <th>
                    team
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelitem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.PSN)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.score)
                    </td>
                    <td>
                        @if (item.Tname == null)
                        {
                            <p>No team</p>
                        }
                        else
                        {
                            @Html.DisplayFor(modelitem => item.Tname)
                        }
                    </td>
                    <td>
                        @Html.ActionLink("Profile", "Profile", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>